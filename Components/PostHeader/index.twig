<flynt-component name="PostHeader">
  <header class="post-header">
    <h1 class="post-header__title">{{ post.title }}</h1>
    {% if post.post_excerpt %}
      <p class="post-header__text">{{ post.post_excerpt }}</p>
    {% endif %}
    {{ renderComponent('PostSticker') }}
    <div class="post-header__meta">
      {% if post.tags %}
        <div class="post-header__tags">
          {% if post.main_tags %}
            {% for tag in post.main_tags %}
              <a class="post-header__tag article-chips" href="{{ tag.link|e('esc_url') }}">{{ tag.title }}</a>
            {% endfor %}
          {% else %}
            {% for tag in post.tags %}
              {% if loop.index < 3 %}
                <a class="post-header__tag article-chips" href="{{ tag.link|e('esc_url') }}">{{ tag.title }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      {% endif %}
      <div class="post-header__date">
        {{ post_date }}
      </div>
      <div class="post-header__divider"></div>
      <div class="post-header__views">{{ views }}</div>
      <div class="post-header__divider"></div>
      <div class="post-header__reading">{{ minutes }}</div>
      <button class="post-header__share-button button-secondary" type="button" data-ref="sharePost">
        {% include '/assets/icons/icon-share-arrow.svg' %}
        <span class="post-header__share-text">{{ share }}</span>
      </button>
      {% if user %}
        <button class="post-header__favourite-button button-secondary" type="button" data-post="{{  post.id  }}" data-user="{{ user.id }}" data-ref="favouritePost">
          {% include '/assets/icons/icon-user-favourites.svg' %}
          <span class="post-header__favourite-text">{{ favourites }}</span>
        </button>
      {% endif %}
      <div class="post-header__share-content" data-ref="shareContent">
        <div class="post-header__share-title">{{ share }}</div>
        <div class="post-header__share-links">
          <a class="post-header__share-link" href="https://t.me/share/url?url={{ post.link }}&text={{ post.title }}" target="_blank"
            onclick="window.open(this.href, 'telegram-share', 'width=580,height=296'); return false;">
            <img class="post-header__share-i" src="{{ theme.uri }}/assets/icons/icon-telegram.svg" alt="Telegram">
          </a>
          <a class="post-header__share-link" href="https://vk.com/share.php?url={{ post.link }}&text={{ post.title }}" target="_blank"
            onclick="window.open(this.href, 'vk-share', 'width=580,height=296'); return false;">
            <img class="post-header__share-i" src="{{ theme.uri }}/assets/icons/icon-vk.svg" alt="VK">
          </a>
          <a class="post-header__share-link" href="https://twitter.com/intent/tweet?url={{ post.link }}&text={{ post.title }}" target="_blank"
            onclick="window.open(this.href, 'x-share', 'width=580,height=296'); return false;">
            <img class="post-header__share-i" src="{{ theme.uri }}/assets/icons/icon-x.svg" alt="X">
          </a>
          <a class="post-header__share-link" href="{{ post.link }}" target="_blank"
            onclick="navigator.clipboard.writeText(this.href); return false;">
            <img class="post-header__share-i" src="{{ theme.uri }}/assets/icons/icon-copy-link.svg" alt="Copy">
          </a>
        </div>
      </div>
    </div>
    <figure class="post-header__figure wp-block-image size-full is-style-default">
      <picture class="post-header__picture">
        <source type="image/jpeg" media="(min-width: 1440px)" srcset="{{ post.thumbnail.src('post-large') }}">
        <source type="image/jpeg" media="(min-width: 1280px)" srcset="{{ post.thumbnail.src('post-desktop') }}">
        <source type="image/jpeg" media="(min-width: 744px)" srcset="{{ post.thumbnail.src('post-tablet') }}">
        <source type="image/jpeg" media="(max-width: 743px)" srcset="{{ post.thumbnail.src('post-mobile') }}">
        <img class="post-header__image lazyload" src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
      </picture>
      <figcaption class="post-header__caption wp-element-caption">{{ post.thumbnail.caption }}</figcaption>
    </figure>
  </header>
</flynt-component>
<link rel="stylesheet" href="{{ theme.path }}/assets/styles/post-content.css?ver={{ theme.version }}" />