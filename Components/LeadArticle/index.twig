<section class="lead-article">
  <a class="lead-article__link" href="{{ post.link|e('esc_url') }}">
    <div class="lead-article__content">
      <h1 class="lead-article__title">{{ post.title }}</h1>
      <p class="lead-article__text">{{ post.excerpt.read_more(false) }}</p>
      <div class="lead-article__tags">
        {% if post.main_tags %}
          {% for tag in post.main_tags %}
            <span class="lead-article__tag article-chips">{{ tag.title }}</span>
          {% endfor %}
        {% else %}
          {% for tag in post.tags %}
            {% if loop.index < 3 %}
              <span class="lead-article__tag article-chips">{{ tag.title }}</span>
            {% endif %}
          {% endfor %}
        {% endif %}
        <span class="lead-article__date">{{ post.date }}</span>
      </div>
    </div>
    <picture class="lead-article__picture">
      {# <source type="image/jpeg" media="(min-width: 1440px)" srcset="{{ post.thumbnail.src('lead-large') }}">
      <source type="image/jpeg" media="(min-width: 1280px)" srcset="{{ post.thumbnail.src('lead-desktop') }}">
      <source type="image/jpeg" media="(min-width: 744px)" srcset="{{ post.thumbnail.src('lead-tablet') }}">
      <source type="image/jpeg" media="(max-width: 743px)" srcset="{{ post.thumbnail.src('lead-mobile') }}"> #}
      <img class="lead-article__image lazyload" src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
    </picture>
  </a>
</section>