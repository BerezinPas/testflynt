<a class="card-article" href="{{ post.link|e('esc_url') }}">
  <picture class="card-article__picture">
    {# <source type="image/jpeg" media="(min-width: 1440px)" srcset="{{ post.thumbnail.src('card-large') }}">
    <source type="image/jpeg" media="(min-width: 1280px)" srcset="{{ post.thumbnail.src('card-desktop') }}">
    <source type="image/jpeg" media="(min-width: 744px)" srcset="{{ post.thumbnail.src('card-tablet') }}">
    <source type="image/jpeg" media="(max-width: 743px)" srcset="{{ post.thumbnail.src('card-mobile') }}"> #}
    <img class="card-article__image lazyload" src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
  </picture>
  <div class="card-article__content">
    {% if post.tags %}
      <div class="card-article__tags">
        {% if post.main_tags %}
          {% for tag in post.tags %}
            {% if tag.id == term_id %}
              <span class="card-article__tag article-chips">{{ tag.title }}</span>
            {% endif %}
          {% endfor %}
          {% for tag in post.main_tags %}
            {% if tag.id != term_id %}
              <span class="card-article__tag article-chips">{{ tag.title }}</span>
            {% endif %}
          {% endfor %}
        {% else %}
          {% for tag in post.tags %}
            {% if tag.id == term_id %}
              <span class="card-article__tag article-chips">{{ tag.title }}</span>
            {% endif %}
          {% endfor %}
          {% for tag in post.tags %}
            {% if loop.index < 3 %}
              {% if tag.id != term_id %}
                <span class="card-article__tag article-chips">{{ tag.title }}</span>
              {% endif %}
            {% endif %}
          {% endfor %}
        {% endif %}
      </div>
    {% endif %}
    <h3 class="card-article__title">{{ post.title }}</h1>
    <p class="card-article__text">{{ post.excerpt.read_more(false) }}</p>
    <span class="card-article__date">{{ post.date }}</span>
  </div>
</a>