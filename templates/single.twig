{% extends 'templates/_document.twig' %}

{% block content %}
  <section class="site-content">
    {{ renderComponent('BreakingArticle') }}
    <article class="site-article">
      {{ renderComponent('PostHeader') }}
      {{ renderComponent('PostContent') }}
      {{ renderComponent('PostFooter') }}
    </article>
      {{ renderComponent('DownloadFiles') }}
    {# coments start #}
    {% if post.comment_status == 'open' %}
      <div class="container">
        {{ function('comments_template') }}
      </div>
    {% endif %}
    {# coments end #}
    <div class="mobile-row">{{ renderComponent('RelatedCompanies', { items: post.companies }) }}</div>
    {{ renderComponent('RalatedNews', { items: related_news }) }}
  </section>
  <aside class="site-sidebar">
    <div class="pc-row">
      {{ renderComponent('RelatedCompanies', { items: post.companies }) }}
    </div>
    {{ renderComponent('RequestConsultation') }}
    {{ renderComponent('SocialLinks') }}
  </aside>
{% endblock %}
